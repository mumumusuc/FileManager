<?xml version="1.0" encoding="utf-8"?>
<com.mumu.filebrowser.views.impl.ToolViewImpl2 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tool_pre"
        style="@style/ToolTextTheme"
        android:drawableStart="@drawable/ic_tool_preview"
        android:text="@string/tool_title_pre" />

    <TextView
        android:id="@+id/tool_next"
        style="@style/ToolTextTheme"
        android:drawableStart="@drawable/ic_tool_next"
        android:text="@string/tool_title_next" />

    <TextView
        android:id="@+id/tool_select"
        style="@style/ToolTextTheme"
        android:drawableStart="@drawable/ic_tool_select_all"
        android:text="@string/tool_title_selected" />

    <TextView
        android:id="@+id/tool_refresh"
        style="@style/ToolTextTheme"
        android:drawableStart="@drawable/ic_tool_refresh"
        android:text="@string/tool_title_refresh" />

    <TextView
        android:id="@+id/tool_style"
        style="@style/ToolTextTheme"
        android:drawableStart="@drawable/ic_tool_style_grid"
        android:text="@string/tool_title_grid" />

    <TextView
        android:id="@+id/tool_search"
        style="@style/ToolTextTheme"
        android:drawableStart="@drawable/ic_tool_search"
        android:text="@string/tool_title_search" />

</com.mumu.filebrowser.views.impl.ToolViewImpl2>